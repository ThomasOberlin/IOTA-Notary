    <script>
        const answers = {
            q1: 'b',
            q2: 'b',
            q3: 'b',
            q4: 'b',
            q5: 'b',
            q6: 'b',
            q7: 'b',
            q8: 'a'
        };
        
        function selectOption(element) {
            const radio = element.querySelector('input[type="radio"]');
            radio.checked = true;
        }
        
        function submitQuiz() {
            let score = 0;
            let total = Object.keys(answers).length;
            
            // Check each answer
            for (let question in answers) {
                const selectedOption = document.querySelector(`input[name="${question}"]:checked`);
                const options = document.querySelectorAll(`input[name="${question}"]`);
                
                // Remove previous styling
                options.forEach(opt => {
                    opt.parentElement.classList.remove('correct', 'incorrect');
                });
                
                if (selectedOption) {
                    if (selectedOption.value === answers[question]) {
                        score++;
                        selectedOption.parentElement.classList.add('correct');
                    } else {
                        selectedOption.parentElement.classList.add('incorrect');
                        // Highlight the correct answer
                        document.querySelector(`input[name="${question}"][value="${answers[question]}"]`).parentElement.classList.add('correct');
                    }
                }
            }
            
            // Calculate percentage
            const percentage = Math.round((score / total) * 100);
            
            // Display result
            const resultDiv = document.getElementById('result');
            resultDiv.classList.add('show');
            
            if (percentage >= 70) {
                resultDiv.classList.remove('fail');
                resultDiv.classList.add('pass');
                resultDiv.innerHTML = `
                    <h3>ðŸŽ‰ Congratulations!</h3>
                    <p>You scored ${score} out of ${total} (${percentage}%)</p>
                    <p>You have a strong understanding of IOTA notarization strategies for VeriPura's compliance use cases.</p>
                `;
            } else {
                resultDiv.classList.remove('pass');
                resultDiv.classList.add('fail');
                resultDiv.innerHTML = `
                    <h3>Keep Learning!</h3>
                    <p>You scored ${score} out of ${total} (${percentage}%)</p>
                    <p>Review the use cases above and try again. Focus on understanding when to use immutable vs. versioned notarization.</p>
                `;
            }
            
            // Scroll to result
            resultDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
    </script>
